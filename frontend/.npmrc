# Optimización de caché para builds más rápidos
cache-min=9999999999
prefer-offline=true
fetch-retries=5
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Usar cache persistente en Vercel
enable-pre-post-scripts=true

# Optimización de instalación
progress=false
loglevel=error

# Forzar resolución plana para builds más rápidos
legacy-peer-deps=true
